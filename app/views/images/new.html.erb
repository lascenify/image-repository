<h1>New Image</h1>

<%= form_with model: @image do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @image.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :path %><br>
    <%= form.text_area :path %>
    <% @image.errors.full_messages_for(:path).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
